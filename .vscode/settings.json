{
    "cmake.configureOnOpen": false,
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
    ],
    "editor.formatOnSave": false,
    // Runs Prettier, then ESLint
    "editor.codeActionsOnSave": {
        "source.formatDocument": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    "tailwindCSS.classAttributes": [
        "class",
        "className",
        "ngClass",
        "classes",
        ".*Classes*",
    ]
}